<h1><%= @sub.title %></h1>
  <h4>Moderator:  <a href="<%=user_url(@sub.moderator_id)%>"><%=@sub.moderator.username%></a></h4>
<%= @sub.description %>

  <h2>Posts:</h2>
  <h4> <a href="<%= new_post_url %>">Add New Post</a></h4>
  
  <ol>
    <% @sub.posts.each do |post| %>
      <li><a href="<%= post_url(post) %>"> <%= post.title %></a></li>
    <% end %>
  </ol>

<% if current_user.id == @sub.moderator_id %>
    <p><a href="<%= edit_sub_url(@sub) %>">Edit Sub</a></p>
<% end %>