<h4>Back to: <a href="<%= sub_url(@post.sub) %>"><%= @post.sub.title %></a></h4>

<h1><%= @post.title %></h1>

<h4>Author: <a href="<%= user_url(@post.author) %>"><%= @post.author.username %></a></h4>

<p><%= @post.content %></p>

<p>URL:<a href="<%= @post.url %>"><%= @post.url %></a></p>

<% if current_user.id == @post.author_id %>
    <p><a href="<%= edit_post_url(@post) %>">Edit</a></p>
<% end %>
